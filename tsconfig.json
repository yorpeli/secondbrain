{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["lib/*"],
      "@agents/*": ["agents/*"],
      "@scripts/*": ["scripts/*"]
    }
  },
  "include": ["lib/**/*", "scripts/**/*", "agents/**/*"],
  "exclude": ["node_modules", "dist"]
}
